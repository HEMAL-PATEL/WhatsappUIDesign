<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Caption">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorCaption</item>
    </style>
    
    <style name="Dark" >
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#FF0</item>
        <item name="colorAccent">#F0F</item>
        <item name="themeColorPrimary">@color/colorAccent</item>
    </style>
    <style name="Light">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#FF0</item>
        <item name="colorAccent">#F0F</item>
        <item name="themeColorPrimary">@color/colorPrimary</item>

    </style>


</resources>
